<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.watchu.user.dao.ReportMapper">
	<select id="selectReportList" parameterType="map" resultType="reportCommand">
		SELECT
		*
		FROM
		(SELECT a.*,
			ROWNUM rnum 
				FROM 
					(SELECT 
						* 
						FROM user_report c 
						JOIN user_info i 
						ON c.id=i.id
		<where>
			<if test="keyword != '' and keyfield == 'id'">
				c.id like '%' || #{keyword} || '%'
			</if>
			<if test="keyword != '' and keyfield == 'content'">
				c.report_content like '%' || #{keyword} || '%'
			</if>
			<!-- <if test="keyword != '' and keyfield == 'all'">
				c.title like '%' || #{keyword} || '%' or
			 	c.id like '%' || #{keyword} || '%' or
			 	c.content like '%' || #{keyword} || '%'
			</if> -->
		</where> 
		ORDER BY c.reg_date DESC)a)
 	<![CDATA[
 		WHERE rnum >= #{start} AND rnum <= #{end}
 	]]>
	</select>
	
	
	<select id="selectReportCnt" parameterType="map"
		resultType="integer">
		SELECT
		count(*)
		FROM user_report
		 <where>
			<if test="keyword != '' and keyfield == 'id'">
				c.id like '%' || #{keyword} || '%'
			</if>
			<if test="keyword != '' and keyfield == 'content'">
				c.report_content like '%' || #{keyword} || '%'
			</if>
		<!--	<if test="keyword != '' and keyfield == 'all'">
				title like '%' || #{keyword} || '%' or
			 	id like '%' || #{keyword} || '%' or
			 	content like '%' || #{keyword} || '%'
			</if> -->
		</where>
	</select>
</mapper> 